
@{
    ViewBag.Title = "NewPass";
    Layout = "~/Views/Shared/Site.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-header">Şifrəni yenilə</div>
                    <div class="card-body">
                        <form method="post" action="~/Site/NewPasspa">
                            <div class="form-group row">
                                <label for="UserSecond" class="col-md-4 col-form-label text-md-right">1 Dəqiqə keçdikdən sonra kodu yenidən almalısınız*</label>
                                <div class="col-md-6">
                                    <strong id="second" style="display: inline-block;"></strong>&nbsp;&nbsp;<p style="display: inline-block;">saniyə.</p>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="UserName" class="col-md-4 col-form-label text-md-right">İstifadəçi adı</label>
                                <div class="col-md-6">
                                    <input id="UserName" type="text" class="form-control " name="UserName" value="" required autocomplete="off" autofocus>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="UserEmail" class="col-md-4 col-form-label text-md-right">E-poçt adresi</label>
                                <div class="col-md-6">
                                    <input id="UserEmail" type="email" class="form-control " name="UserEmail" value="" required autocomplete="off" autofocus>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Kod" class="col-md-4 col-form-label text-md-right">Kod(E-poçt adresinə göndərildi)</label>
                                <div class="col-md-6">
                                    <input id="UserRandomCode" type="text" class="form-control " name="UserRandomCode" value="" required autocomplete="off" autofocus>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Yeni şifrə" class="col-md-4 col-form-label text-md-right">Yeni şifrə</label>
                                <div class="col-md-6">
                                    <input required type="password" name="UserPassword" value="" placeholder="Şifrə">
                                </div>
                            </div>
                            <div class="form-group row mb-0">
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-warning">
                                        Şifrəni yenilə
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section scripts {
    <script type="text/javascript">
        var i = 0;
        var a = setInterval(funk1, 1000)

        function funk1() {
            second.innerText = i;
            i++;
            if (second.innerText == 60) {
                clearInterval(a);
                window.location.href = "ForgetPass";
            }
        };
    </script>
}
