    Layout = "~/Views/Shared/Site.cshtml";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-header">Şifrəni yenilə</div>
                    <div class="card-body">
                        <form method="POST" action="~/Site/ForgetPass">
                            <input type="hidden" name="_token" value="IhSX8j5YAsOsRzfPKsfMayXC1sCxrj2Y7T2mHbnq">
