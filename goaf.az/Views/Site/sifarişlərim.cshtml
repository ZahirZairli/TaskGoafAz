
@{
    ViewBag.Title = "sifarişlərim";
    Layout = "~/Views/Shared/Site.cshtml";
}

<main>
    <div class="container-fluid pr-0 pl-0">
        <div class="title-back">
            <div class="game-title">
                <h4>Şəxsi Kabinet</h4>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-lg-3 mobile-size">
                <div class="dashboard">
                    <div class="dashboard-title">
                        <img src="~/Content/storage/gamer/@Model.UserPhoto" alt="@Model.UserName @Model.UserSurname">
                        <p>@Model.UserName @Model.UserSurname</p>
                        <hr>
                    </div>
                    <div class="my-balance">
                        <span><i class="fas fa-coins"></i> Balans : </span>
                        <span>@Model.UserBalans AZN</span>
                    </div>
                    <div class="my-balance">
                        <span><i class="fad fa-star"></i> Bonus : </span>
                        <span>@Model.UserBonus</span>
                    </div>
                    <div class="dashboard-inform">
                        <ul class="list-unstyled m-0">
                            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="v-pills-home-tab" href="~/Site/User1" role="tab" aria-controls="v-pills-home" aria-selected="true">
                                    <i class="fal fa-user-alt"></i>
                                    Profil Məlumatlarım
                                </a>
                                <a class="nav-link " id="v-pills-profile-tab" href="~/Site/Messages" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                    <i class="fal fa-envelope"></i>
                                    Məktublarım
                                </a>
                                <a class="nav-link " id="v-pills-messages-tab" href="~/Site/sifarişlərim" role="tab" aria-controls="v-pills-messages" aria-selected="false"><i class="fal fa-cart-plus"></i> Sifarişlərim</a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-plus-circle"></i> Balans
                                    Yüklə
                                </a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-info-circle"></i>
                                    Ödəmə Bildirimi
                                </a>
                                <a href="~/Site/LogOut" class="nav-link">
                                    <i class="fal fa-sign-out-alt"></i>
                                    Hesabdan Çıx
                                </a>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="right-part">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tab-content" id="v-pills-tabContent">
                                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                    <h5 class="simple-title">Sifarişlərim</h5><hr />
                                </div>
                                <div class="game-inform">
                                    <div class="col-md-12">
                                        <div class="table-responsive-sm">
                                            <table class="table mt-0 basket middle-basket" id="mytable">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Məhsulun Adı</th>
                                                        <th scope="col">Tarix</th>
                                                        <th scope="col">Ədəd</th>
                                                        <th scope="col">Qiymət</th>
                                                        <th scope="col">Toplam Tutar</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in ViewBag.orders)
                                                    {
                                                    <tr>
                                                        <td>
                                                            <p name="@item.GameProductName">@item.GameProductName</p>
                                                        </td>
                                                        <td>
                                                            <h6 style="display: inline-block;" id="price">@item.OrderDate </h6>
                                                        </td>
                                                        <td>
                                                            <div class="table-item quantity width-10">
                                                                <input name="Count" id="count" class="count" type="text" min="1" step="1" value="@item.OrderCount">
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <p name="Total">@item.GameProductPrice</p>
                                                        </td>
                                                        <td>
                                                            <p name="Total">@item.Total</p>
                                                        </td>
                                                    </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

