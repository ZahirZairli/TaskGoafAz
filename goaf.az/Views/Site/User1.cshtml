
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/Site.cshtml";
    var cookie = Request.Cookies["Gamer"];
}
<main>
    <div class="container-fluid pr-0 pl-0">
        <div class="title-back">
            <div class="game-title">
                <h4>Şəxsi Kabinet</h4>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-lg-3 mobile-size">
                <div class="dashboard">
                    <div class="dashboard-title">
                        <img src="~/Content/storage/gamer/@Model.UserPhoto" alt="@Model.UserName @Model.UserSurname">
                        <p>@Model.UserName @Model.UserSurname</p>
                        <hr>
                    </div>
                    <div class="my-balance">
                        <span><i class="fas fa-coins"></i> Balans : </span>
                        <span>@Model.UserBalans AZN</span>
                    </div>
                    <div class="my-balance">
                        <span><i class="fad fa-star"></i> Bonus : </span>
                        <span>@Model.UserBonus</span>
                    </div>
                    <div class="dashboard-inform">
                        <ul class="list-unstyled m-0">
                            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="v-pills-home-tab" href="~/Site/User1" role="tab" aria-controls="v-pills-home" aria-selected="true">
                                    <i class="fal fa-user-alt"></i>
                                    Profil Məlumatlarım
                                </a>
                                <a class="nav-link " id="v-pills-profile-tab" href="~/Site/Messages" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                    <i class="fal fa-envelope"></i>
                                    Məktublarım
                                </a>
                                <a class="nav-link " id="v-pills-messages-tab" href="~/Site/sifarişlərim" role="tab" aria-controls="v-pills-messages" aria-selected="false"><i class="fal fa-cart-plus"></i> Sifarişlərim</a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-plus-circle"></i> Balans
                                    Yüklə
                                </a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-info-circle"></i>
                                    Ödəmə Bildirimi
                                </a>
                                <a href="~/Site/LogOut" class="nav-link">
                                    <i class="fal fa-sign-out-alt"></i>
                                    Hesabdan Çıx
                                </a>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="right-part">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tab-content" id="v-pills-tabContent">
                                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                    <h5 class="simple-title">Profil Məlumatlarım</h5>
                                    <form enctype="multipart/form-data" class="row profil-edit" method="post" action="~/Site/UserEdit/@cookie["UserId"]">
                                        <input type="hidden" name="_token" value="iBijgSy00EyMqKuSJamdhJXsTPsaqNcfLyYN1zNq"> <div class="col-md-6">
                                            <label for="name">Adınız və Soyadınız</label>
                                            <input id="name" name="UserName" class="form-control" type="text" disabled value="@Model.UserName @Model.UserSurname">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="email">E-posta Adresiniz</label>
                                            <input id="email" class="form-control" name="UserEmail" type="email" disabled value="@Model.UserEmail">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="phone">Telefon Nömrəsi</label>
                                            <input value="@Model.UserPhone" id="phone" name="UserPhone" class="form-control" type="tel">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="gender">Cinsiyyət</label>
                                            <select class="form-control" name="UserGender" value="1" id="gender">
                                                <option>
                                                    Seçin
                                                </option>
                                                <option value="1" @(Model.UserGender == 1 ? "selected" : "")>
                                                    Kişi
                                                </option>
                                                <option value="2" @(Model.UserGender == 2 ? "selected" : "")>
                                                    Qadın
                                                </option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="photo">Profil Şəklini Dəyiş</label>
                                            <input accept="image/*" name="UserPhoto" hidden id="photo" class="form-control" type="file">
                                            <label id="choose" class="form-control" for="photo"><i class="fal fa-camera-alt"></i> Şəkil seç</label>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="sign">Qeydiyyat Tarixi</label>
                                            <input id="sign" class="form-control" type="text" value="@Model.UserSignDate" disabled>
                                        </div>
                                        <div class="col-md-12 text-right">
                                            <button class="save" type="submit">Yadda Saxla</button>
                                            <hr>
                                        </div>
                                    </form>
                                    <h5 class="simple-title">Şifrəni Yenilə</h5>
                                    <form method="post" class="row password" action="~/Site/UserPasswordEdit/@cookie["UserId"]">
                                        <input type="hidden" name="_token" value="iBijgSy00EyMqKuSJamdhJXsTPsaqNcfLyYN1zNq"> <div class="col-md-6">
                                            <label for="password">Mövcud Şifrə</label>
                                            <input name="UserPassword" id="password" class="form-control" type="password">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="repassword">Yeni Şifrə</label>
                                            <input name="NewUserPassword" id="repassword" class="form-control" type="password">
                                        </div>
                                        <div class="col-md-12 text-right">
                                            <button class="save" type="submit">Yadda Saxla</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert('@TempData["Message"]');
            };
    </script>
}
