
@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/Site.cshtml";
    var cookie = Request.Cookies["Gamer"];
}

<main>
    <div class="container-fluid pr-0 pl-0">
        <div class="title-back">
            <div class="game-title">
                <h4>Şəxsi Kabinet</h4>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
            </div>
            <div class="col-lg-3 mobile-size">
                <div class="dashboard">
                    <div class="dashboard-title">
                        <img src="~/Content/storage/gamer/@Model.UserPhoto" alt="@Model.UserName @Model.UserSurname">
                        <p>@Model.UserName @Model.UserSurname</p>
                        <hr>
                    </div>
                    <div class="my-balance">
                        <span><i class="fas fa-coins"></i> Balans : </span>
                        <span>@Model.UserBalans AZN</span>
                    </div>
                    <div class="my-balance">
                        <span><i class="fad fa-star"></i> Bonus : </span>
                        <span>@Model.UserBonus</span>
                    </div>
                    <div class="dashboard-inform">
                        <ul class="list-unstyled m-0">
                            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="v-pills-home-tab" href="~/Site/User1" role="tab" aria-controls="v-pills-home" aria-selected="true">
                                    <i class="fal fa-user-alt"></i>
                                    Profil Məlumatlarım
                                </a>
                                <a class="nav-link " id="v-pills-profile-tab" href="~/Site/Messages" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                    <i class="fal fa-envelope"></i>
                                    Məktublarım
                                </a>
                                <a class="nav-link " id="v-pills-messages-tab" href="~/Site/sifarişlərim" role="tab" aria-controls="v-pills-messages" aria-selected="false"><i class="fal fa-cart-plus"></i> Sifarişlərim</a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-plus-circle"></i> Balans
                                    Yüklə
                                </a>
                                <a href="~/Site/BankTransfer" class="nav-link">
                                    <i class="fal fa-info-circle"></i>
                                    Ödəmə Bildirimi
                                </a>
                                <a href="~/Site/LogOut" class="nav-link">
                                    <i class="fal fa-sign-out-alt"></i>
                                    Hesabdan Çıx
                                </a>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="right-part">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="tab-content" id="v-pills-tabContent">
                                <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                    <h5 class="simple-title">Məktublarım</h5><hr />
                                </div>
                                    <div class="game-inform">
                                        @foreach (var item in ViewBag.sendingmessage)
                                        {
                                            <p>@item.messagetext </p>
                                            <hr />
                                        }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


