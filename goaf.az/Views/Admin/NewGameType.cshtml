
@{
    ViewBag.Title = "NewGameType";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<form style="margin-left: 5%;" action="~/Admin/NewGameType" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>New GameType</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="GameTypeName" name="GameTypeName" value="" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="form-group">
                    <input type="file" class="form-control" placeholder="GameTypePhoto" name="GameTypePhoto" value="" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <div class="form-group">
<textarea required placeholder="About" id="description" class="form-control" name="GameTypeAbout" rows="7"></textarea>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "GameType")
</div>

