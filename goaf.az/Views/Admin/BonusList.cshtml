
@{
    ViewBag.Title = "BonusList";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="bg-info text-center p-3 mt-5 border-dark" style="padding: 5px;">
    <h1>Bonus List!</h1>
</div>
<div class="taz text-center" style="width: 100%;margin-top: 15px;">
    <div class="col-md-12" style="overflow-x: auto">
        <table class="table table-bordered bg-danger text-center table-hover" style="width:auto;cursor: pointer;">
            <tr>
                <th class="text-center">BonusIndex</th>
                <th class="text-center">BonusName</th>
                <th class="text-center">BonusPhoto</th>
                <th class="text-center">BonusPrice</th>
                <th class="text-center">BonusCount</th>
                <th class="text-center" colspan="2"><a href="~/Admin/NewBonus">+</a></th>
            </tr>
            @foreach (var item in ViewBag.BonusList)
            {
                <tr>
                    <td>@(ViewBag.BonusList.IndexOf(item)+1)</td>
                    <td>@item.BonusName</td>
                    <td>@item.BonusPhoto</td>
                    <td>@item.BonusPrice</td>
                    <td>@item.BonusCount</td>
                    <td><a href="~/Admin/deletebonuslist/@item.BonusId" style="cursor: pointer;">Sil</a></td>
                    <td><a href="~/Admin/BonusListEdit/@item.BonusId" style="cursor: pointer;">Edit</a></td>
                </tr>
            }
        </table>
    </div>
</div>

